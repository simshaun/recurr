{
    "name": "simshaun/recurr",
    "description": "PHP library for working with recurrence rules",
    "keywords": ["rrule", "recurrence", "recurring", "events", "dates"],
    "homepage": "https://github.com/simshaun/recurr",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shaun Simmons",
            "email": "shaun@shaun.pub",
            "homepage": "https://shaun.pub"
        }
    ],
    "require": {
        "php": ">=8.4",
        "doctrine/collections": "~1.6||^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "symfony/yaml": "^7.3",
        "rector/rector": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Recurr\\": "src/Recurr/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Recurr\\": "tests/Recurr/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --color=always"
    }
}
